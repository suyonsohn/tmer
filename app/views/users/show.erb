<h1><%= current_user.first_name %> <%= current_user.last_name %></h1>

<h2 class="header">Projects</h2>
<div class="col-md-12">
  <%  @projects.each do |project| %>
    <div class="col-md-6">
      <h3><a href="/projects/<%= project.id %>"><%= project.name %></a></h3>
    </div>
  <% end %>
  </div>
  <div class="col-md-12">
  <a type="submit" href="/project/new" class="btn btn-primary btn-success project">New Project!</a>
  </div>


<h2 class="header">Skills</h2>
<div class="col-md-12"> 
<form method="post" action="/users/show/<%= current_user.id %>">
  
  <% @skills.each do |skill| %>

    <% 
    if current_user.skills.pluck(:id).include?(skill.id)
      @checked = "checked"
    else
      @checked = ""
    end %>
    <div class="col-md-4">
      <input type="checkbox" name="<%= skill.id %>"<%= @checked %>>
      <label><%= skill.name %></label>
    </div>
  <% end %>
  </form>
  </div>

  <div class="col-md-12">
  <input type="submit" value="Update Skills" class="btn btn-primary btn-success project">
  </div>


