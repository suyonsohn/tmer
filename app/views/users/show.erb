<h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
<h2 class="header">Projects</h2>
<div class="projects">
<%  @projects.each do |project| %>
  <div class="project col-md-6">
    <h3><a href="/projects/<%= project.id %>"><%= project.name %></a> </h3>
  </div>
<% end %>
</div>
<div class="skills"> 
<form method="post" action="/users/show/<%= current_user.id %>">
  <h2 class="header">Skills</h2>
  <% @skills. each do |skill| %>
    <div class="skill col-md-4">
      <input type="checkbox" name="<%= skill.id %>">
      <label><%= skill.name %></label>
    </div>
  <% end %>
  <input type="submit" value="Update Skills">
</form>
</div>
