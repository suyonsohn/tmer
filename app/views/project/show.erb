<h1><%= current_project.name %></h1>
<!-- </div> -->


<div class="col-md-12">
  <div class="project_box">
    <form method="post" action="/project/show/<%= current_project.id %>">
      <!-- <input type="text" name="name" class="form-control" placeholder="project name" required autofocus> -->

      <textarea type="text" name="description" class="form-control" placeholder="project description" rows="3" required autofocus><%= current_project.description %></textarea>

      
      <h2 class="header">Required Skills</h2>
      <div class="col-md-12"> 
      <% @skills.each do |skill| %>
        <% 
        if current_project.skills.pluck(:id).include?(skill.id)
          @checked = "checked"
        else
          @checked = ""
        end
         %>
        <div class="col-md-4">
          <input type="checkbox" name="<%= skill.id %>" <%= @checked %>>
          <label><%= skill.name %></label>
          </div>
      <% end %>
    
      </div>
    
<!-- 
    <label>Ideal Team Size</label>
    <input type="number" name="team_size" class="form-control"> -->
    <div class="col-md-6">
    
    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Update Project"> 
    </div>
  </form>

  <form method="get" action="/project/match">
    <div class="col-md-6">
    <input class="btn btn-lg btn-success btn-block" type="submit" value="Find Team!">     
    </div>
  </form>
</div>
</div>

